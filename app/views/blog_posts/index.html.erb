<h1>All Blogs</h1>

<% @blog_posts.each do |blog| %>
  <div>
    <h3><%= link_to blog.title, blog %></h3>
    <% if blog.draft? %>
      <div class="p-2 rounded bg-gray-100 text-gray-900">Draft</div>
    <% elsif blog.scheduled? %>
      <div class="p-2 rounded bg-blue-100 text-blue-900">Scheduled</div>
    <% end %>
    <p><%= blog.body %></p>
  </div>
<% end %>
