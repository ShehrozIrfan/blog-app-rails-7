<h1>Show Blog Post</h1>

<h3><%= @blog_post.title %></h3>
<p><%= @blog_post.body %></p>

<% if user_signed_in? %>
  <div>
  <%= link_to 'Edit', edit_blog_post_path(@blog_post.id) %>
  <br/><br/>
  <%= button_to 'Delete', @blog_post, method: :delete, data: {turbo_confirm: "Are you sure to delete this blog post?" } %>
  </div>
<% end %>
